doctype

html(lang="ru")

  -var active = 'Главная' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная' + ' - Sunday Rock online' //title страницы для генерации верстки

  include ./_include/_head

  body

    // Preloader
    include ./_include/_preloader

    include ./_include/_header

    // Content
    .content
      
      // Main section
      .section.main-section
        .container
          
          .main-section__head
            h1 Онлайн-школа вокала
            .main-section__untitle Учитесь петь красиво 
              strong где удобно и когда удобно!

          .main-section__wrapper
            .main-section__img
              img(src="./images/img-girl.png", alt="")
            .main-section__form
              form(action="")
                fieldset
                  .form-group
                    input(type="text" name="name" placeholder="Введите имя")
                  .form-group
                    input(type="text" name="phone" placeholder="Введите телефон")
                  .form-group
                    input(type="email" name="email" placeholder="Введите электронную почту")
                  .form-group
                    label.form-checkbox
                      input(type="checkbox" name="checkbox1")
                      span Заниматься будет ребёнок
                  .form-group
                    input(type="text" name="age" placeholder="Введите возраст ребенка")
                button(type="submit").btn Хочу петь!
                .form-info Оставляя заявку, вы принимаете условия соглашения
        


    include ./_include/_footer
    div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")

