              img(data-src="./images/img-block1-left.png", alt="").bg-img__img.bg-img__img--top-left.lazyload
              img(data-src="./images/img-block1-right.png", alt="").bg-img__img.bg-img__img--top-right.lazyload
        
        // Main section
        .section.main-section.--v2
          .container
            
            .main-section__head
              h1 Онлайн-школа гитары 
                span.--color Sunday rock
              .main-section__untitle Прокачай мастерство игры на гитаре с 
                strong преподавателем

            .main-section__wrapper
              .main-section__img
                img(data-src="./images/img-girl-2.png?v2", alt="").main-section__img-2.lazyload
              .main-section__form
                img(src="./tmp/gift.png", alt="").gift
                .main-section__form-content
                  .form
                    .main-section__form-head Индивидуальный 
                      br 
                      | урок игры на гитаре
                    ul
                      li Оставляете заявку
                      li Выбираете время урока
                      li Оплачиваете 1 руб.
                      li Поёте и радуетесь!
                    form(action="" autocomplete="off")
                      fieldset
                        .form-group.has-error
                          input(type="text" name="name" placeholder="Анна" required value="Поле не заполнено").form-control
                        .form-group.has-error
                          input(type="text" name="phone" placeholder="8 922 222 22 22" required value="Поле не заполнено").form-control
                        .form-group.form-group--mb21.has-success
                          input(type="email" name="email" placeholder="anna@gmail.com" required value="Заполнено корректно").form-control
                        .form-group
                          label.label-checkbox.j-label-age
                            input(type="checkbox" name="checkbox1")
                            span.label-checkbox__input
                            span.label-checkbox__label
                              b Заниматься будет ребёнок
                        .form-group.form-group--mb21.hidden.j-label-block
                          select.form-control(name='kid_age' placeholder='Сколько лет ребёнку?')
                            option(value disabled selected) Сколько лет ребёнку?
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                            option(value='8') 8
                            option(value='9') 9
                            option(value='10') 10
                            option(value='11') 11
                            option(value='12') 12
                            option(value='13') 13
                            option(value='14') 14
                            option(value='15') 15
                            option(value='16') 16
                            option(value='17') 17
                      button(type="submit").btn.btn--block Записаться!
                      .form-info Оставляя заявку, вы принимаете 
                        a(href="#!" target="_blank") условия соглашения
          
