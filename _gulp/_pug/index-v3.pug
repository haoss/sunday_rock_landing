doctype

html(lang="ru")

  -var active = 'Главная' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная 3' + ' - Sunday Rock online' //title страницы для генерации верстки

  include ./_include/_head

  body
    .base.--v3

      // Preloader
      include ./_include/_preloader

      include ./_include/_header-v3

      // Content
      main.content

        // Bg-top
        .container
          .bg-img
            .bg-img__wrapper
              img(data-src="./images/img-block1-left.png", alt="").bg-img__img.bg-img__img--top-left.lazyload
              img(data-src="./images/img-block1-right.png", alt="").bg-img__img.bg-img__img--top-right.lazyload

        // About
        .section.about.--v3
          .container

            .about__gift
              img(src="./tmp/gift-desktop.png", alt="")
              img(src="./tmp/gift-mobile.png", alt="")

            .content__head.about__head
              h2 
                span.--color Подарочный сертификат 
                | на занятия музыкой с преподавателем онлайн

            .about__content
              .first
                img(src="./tmp/about-img-crown.png", alt="")
                img(src="./tmp/about-img-desktop-2.png", alt="")
                img(src="./tmp/about-img-mobile-2.png", alt="")
              .last
                .about__content-content
                  ul
                    li Для взрослых и детей с 5 лет
                    li Занимайтесь онлайн из дома или офиса
                    li Профессиональные преподаватели
                    li Удобная платформа для занятий
                    li Запись уроков (beta)
                    li Доступные цены 
                      span.--color &nbsp;от 650р. 

        // Direction
        .section.direction
          .container
            .direction__wrapper
              .direction__one
                .direction__one-head
                  img(src="./tmp/img-direction-1.png", alt="")
                  div Выберите 
                    br
                    | направление
                .direction__one-btn
                  button(type="button").active Вокал
                  button(type="button") Гитара
                  button(type="button") На выбор ученика

              .direction__two
                .direction__two-head
                  img(src="./tmp/img-direction-2.png", alt="")
                  div Выберите 
                    br 
                    | количество уроков

                .cost.--v3
                  ul.nav.nav-tabs#myTab(role='tablist')
                    li.nav-item(role='presentation')
                      a.nav-link.active#tab1-tab(data-toggle='tab' href='#tab1' role='tab' aria-controls='tab1' aria-selected='true')
                        i.icon-rouble
                    li.nav-item(role='presentation')
                      a.nav-link#tab2-tab(data-toggle='tab' href='#tab2' role='tab' aria-controls='tab2' aria-selected='false')
                        .icon-dollar
                  .tab-content
                    .tab-pane.fade.show.active#tab1(role='tabpanel' aria-labelledby='tab1-tab')
                      .cost__row
                        .cost__block
                          .cost__block-title
